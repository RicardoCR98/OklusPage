<section class="py-20">
    <div class="mx-auto max-w-3xl">
        <!-- CTA simplificado -->
        <div
            class="relative overflow-hidden rounded-3xl bg-linear-to-br from-slate-900 via-slate-800 to-slate-900 p-10 text-center shadow-2xl md:p-16"
        >
            <div class="relative space-y-8">
                <div class="space-y-4">
                    <h2 class="text-4xl font-extrabold text-white md:text-5xl">
                        Únete a la lista de espera
                    </h2>
                    <p class="text-xl text-slate-300">
                        Lanzamiento 2026.
                        <br /><strong class="font-bold text-white"
                            >Solo para clínicas de 1-2 dentistas.</strong
                        >
                    </p>
                </div>

                <!-- CTA Button -->
                <button
                    onclick="scrollToForm()"
                    class="group relative overflow-hidden rounded-xl bg-linear-to-r from-teal-500 to-teal-600 px-8 py-5 text-lg font-bold text-white shadow-2xl shadow-teal-600/50 transition hover:from-teal-600 hover:to-teal-700 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-teal-300"
                >
                    <span class="relative z-10">Unirme a la lista</span>
                    <div
                        class="absolute inset-0 -translate-x-full bg-linear-to-r from-transparent via-white/20 to-transparent transition-transform duration-500 group-hover:translate-x-full"
                    >
                    </div>
                </button>

                <p class="text-sm text-slate-400">
                    Te avisamos cuando esté listo.
                </p>
            </div>
        </div>
    </div>
</section>
