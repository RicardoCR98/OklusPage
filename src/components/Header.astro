---
import OklusIcon from "../assets/OklusIcon.svg?raw";
---

<header
    class="sticky top-0 z-50 border-b border-slate-200/50 bg-white/95 backdrop-blur-lg"
>
    <div
        class="mx-auto flex max-w-6xl items-center justify-between gap-4 px-6 py-4"
    >
        <!-- Logo -->
        <div class="flex items-center gap-3">
            <div
                class="flex h-10 w-10 items-center justify-center rounded-xl [&_svg]:h-5 [&_svg]:w-auto"
            >
                <div
                    role="img"
                    aria-label="Oklus"
                    set:html={OklusIcon}
                ></div>
            </div>
            <div class="hidden flex-col leading-tight sm:flex">
                <span class="text-lg font-extrabold text-slate-900">Oklus</span>
                <span class="text-xs text-slate-600"
                    >Software dental simple</span
                >
            </div>
            <span class="text-lg font-extrabold text-slate-900 sm:hidden"
                >Oklus</span
            >
        </div>

        <!-- Right side -->
        <div class="flex items-center gap-2 sm:gap-3">
            <!-- Badge - hidden en mobile muy pequeÂ¤o -->
            <span
                class="hidden items-center gap-1 rounded-full border border-teal-200 bg-teal-50 px-3 py-1.5 text-xs font-bold text-teal-900 sm:inline-flex"
            >
                <span class="relative flex h-2 w-2">
                    <span
                        class="absolute inline-flex h-full w-full animate-ping rounded-full bg-teal-600 opacity-75"
                    ></span>
                    <span
                        class="relative inline-flex h-2 w-2 rounded-full bg-teal-600"
                    ></span>
                </span>
                <span class="hidden md:inline">Beta activa</span>
                <span class="md:hidden">Beta</span>
            </span>

            <!-- CTA Button -->
            <button
                class="group relative overflow-hidden rounded-xl bg-teal-600 px-4 py-2.5 text-sm font-bold text-white shadow-md shadow-teal-600/20 transition hover:bg-teal-700 hover:shadow-lg hover:shadow-teal-600/30 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-teal-500 sm:px-5 sm:py-3"
                onclick="scrollToForm()"
            >
                <span class="relative z-10 hidden sm:inline"
                    >Solicitar acceso</span
                >
                <span class="relative z-10 sm:hidden">Unirse</span>
                <div
                    class="absolute inset-0 -translate-x-full bg-linear-to-r from-transparent via-white/20 to-transparent transition-transform duration-300 group-hover:translate-x-full"
                >
                </div>
            </button>
        </div>
    </div>
</header>
