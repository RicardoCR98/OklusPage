<section class="py-20">
    <div class="mx-auto max-w-5xl">
        <!-- Header simplificado -->
        <div class="mb-12 text-center">
            <h2 class="text-4xl font-extrabold text-slate-900 md:text-5xl">
                Tres pasos. Cero capacitación.
            </h2>
        </div>

        <!-- Grid de pasos simplificado -->
        <div class="grid gap-8 md:grid-cols-3">
            <!-- Paso 1 -->
            <div class="rounded-2xl border-2 border-teal-600 bg-white p-6">
                <div
                    class="flex h-12 w-12 items-center justify-center rounded-xl bg-linear-to-br from-teal-500 to-teal-700 text-lg font-extrabold text-white"
                >
                    1
                </div>
                <h3 class="mt-4 text-xl font-extrabold text-slate-900">
                    Sube tu agenda
                </h3>
                <p class="mt-2 text-base text-slate-700">Listo en 5 minutos.</p>
            </div>

            <!-- Paso 2 -->
            <div class="rounded-2xl border-2 border-teal-500 bg-white p-6">
                <div
                    class="flex h-12 w-12 items-center justify-center rounded-xl bg-linear-to-br from-teal-500 to-teal-700 text-lg font-extrabold text-white"
                >
                    2
                </div>
                <h3 class="mt-4 text-xl font-extrabold text-slate-900">
                    Todo el historial en una vista
                </h3>
                <p class="mt-2 text-base text-slate-700">
                    Sin abrir mil pantallas.
                </p>
            </div>

            <!-- Paso 3 -->
            <div class="rounded-2xl border-2 border-teal-400 bg-white p-6">
                <div
                    class="flex h-12 w-12 items-center justify-center rounded-xl bg-linear-to-br from-teal-500 to-teal-700 text-lg font-extrabold text-white"
                >
                    3
                </div>
                <h3 class="mt-4 text-xl font-extrabold text-slate-900">
                    Cierre de día automático
                </h3>
                <p class="mt-2 text-base text-slate-700">
                    Pendientes organizados.
                </p>
            </div>
        </div>
    </div>
</section>
