---
interface Props {
    icon: string;
    title: string;
    description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="rounded-2xl border border-slate-200/60 bg-white p-5">
    <div class="mb-3 flex h-11 w-11 items-center justify-center rounded-xl bg-teal-50 text-sm font-extrabold text-teal-700">
        {icon}
    </div>
    <h3 class="text-lg font-extrabold text-slate-900">{title}</h3>
    <p class="mt-2 text-sm text-slate-600">{description}</p>
</div>
