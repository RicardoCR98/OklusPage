---
import Layout from "@layouts/Layout.astro";
import Hero from "@components/Hero.astro";
import TechSpecs from "@components/TechSpecs.astro";
import Problem from "@components/Problem.astro";
import Highlight from "@components/Highlight.astro";
import Features from "@components/Features.astro";
import Benefits from "@components/Benefits.astro";
import WaitlistForm from "@components/WaitlistForm.astro";
import FinalCTA from "@components/FinalCTA.astro";
---

<Layout
    title="Oklus - Software para Clínicas Dentales Pequeñas | Agenda + Pacientes + Historial | Ecuador"
    description="Sistema de gestión dental simple para clínicas de 1-2 dentistas en Ecuador. Agenda, pacientes e historial clínico. Funciona sin internet. Sin facturación ni ERP. Beta gratis 2026 - solo 20 lugares."
>
    <Hero />
    <Problem />
    <TechSpecs />
    <Features />
    <WaitlistForm />
    <Benefits />
    <FinalCTA />
</Layout>

<script>
    function scrollToForm() {
        const form = document.getElementById("waitlist-form");
        if (form) {
            form.scrollIntoView({
                behavior: "smooth",
                block: "center",
            });

            // Focus en el email después del scroll
            setTimeout(() => {
                const emailInput = document.getElementById(
                    "email",
                ) as HTMLInputElement;
                if (emailInput) {
                    emailInput.focus();
                }
            }, 500);
        }
    }

    (window as any).scrollToForm = scrollToForm;
</script>
